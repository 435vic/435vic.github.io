---
import Page from '../layouts/Page.astro';
---

<Page>
	<main>
		<div>
			<h1>Undergoing Renovations</h1>
			<p class="description">[insert witty one liner about the site still being built]</p>
		</div>
	</main>
</Page>

<style>
	:root {
		--text: #ecf2f4;
		--background: #090e0f;
		--primary: #a0c3c8;
		--secondary: #5c4171;
		--accent: #ab6da8;
		--font-headline: 'Lexend', sans-serif;
		--font-mono: 'IBM Plex Mono', ui-monospace, Monaco, monospace;
	}

	body {
		background: var(--background);
		color: var(--text);
		font-family: Lexend, sans-serif;
	}

	main {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 100vh;
		text-align: center;
	}

	.description {
		font-family: var(--font-mono);
	}
</style>
